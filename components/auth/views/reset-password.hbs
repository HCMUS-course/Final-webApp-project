<!-- Error 404 Area Start -->
<div class="error404-area pt-30 pb-60">
    <div class="col-lg-4 offset-lg-4 col-md-12 order-1 order-lg-2">
        <form action="/reset-password" method="post">
            <div class="notification-background">
                <div class="error-text">
                    <br>
                    {{#if resetStatus}}
                        <div class="text-center" style="color:red;"><h6>Password Reset Successfully</h6></div>
                    {{/if}}
                    <br>
                    <h2 class="text-center">New password</h2>
                    <br>
                    <br>
                    <input type="hidden" name="email" value="{{email}}">
                    <div class="text-center"><h6>Please type in the password</h6></div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <input type="password" name="password" class="form-control" value="">
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="mt-5 text-center">
                        <button type="submit" class="btn btn-primary profile-button">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>