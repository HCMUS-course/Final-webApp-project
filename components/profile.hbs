<div class="container-scroller">
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="main-panel">
            <div class="container rounded bg-white mt-5 mb-5">
                <div class="row">
                    <div class="col-md-3 border-right">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <img class="rounded-circle mt-5" src="images/account/profile.jpg" width="150px">
                            <span class="font-weight-bold">{{user.username}}</span>
                            <span class="text-black-50">{{user.email}}</span>

                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">User Profile</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6"><label class="labels">Username</label>
                                    <p>{{user.username}}</p>
                                </div>
                                <div class="col-md-6"><label class="labels">Password</label>
                                    <p>**********</p>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12"><label class="labels">Full Name</label>
                                    <p>{{user.fullname}}</p>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6"><label class="labels">Is Authenticated</label>
                                    <p>{{user.isAuthenticated}}</p>
                                </div>
                                <div class="col-md-6"><label class="labels">Is Lock</label>
                                    <p>{{user.isLock}}</p>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12"><label class="labels">Mobile Number</label>
                                    <p>{{user.phone}}</p>
                                </div>
                                <div class="col-md-12"><label class="labels">Address</label>
                                    <p>{{user.address}}</p>
                                </div>
                                <div class="col-md-12"><label class="labels">Email</label>
                                    <p>{{user.email}}</p>
                                </div>
                            </div>
                            <div class="mt-5 text-center"><button href="#"class="btn btn-primary profile-button" type="button">Edit Profile</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>