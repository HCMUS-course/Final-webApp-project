<div class="main-panel">
    <div class="container rounded bg-white mt-5 mb-5">
        <form action="/account/password/change/{{user._id}}" method="post">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5">
                    <div class="p-3 py-5">
                        <div class="text-center justify-content-between align-items-center mb-3">
                            <h4>Change password</h4>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Old password</label>
                                {{#unless validOldPassword}}
                                    <label style="color:red;">Wrong Password</label>
                                {{/unless}}
                                <input type="password" name="password" class="form-control"
                                       placeholder="Enter your old password" value="">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">New password</label>
                                <input type="password" name="newPassword" class="form-control"
                                       placeholder="Enter your new password" value="">
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button type="submit" class="btn btn-primary profile-button">Change password</button>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
            </div>
            <div class="row mt-3">
            </div>
        </form>
    </div>
</div>