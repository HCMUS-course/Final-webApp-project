<div class="main-panel">
    <div class="container rounded bg-white mb-5 mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" src="images/users/default-picture.jpg" alt="profile-icon" width="150px">
                    <span class="font-weight-bold">{{user.username}}</span>
                    <span class="text-black-50">{{user.email}}</span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="p-3 py-5">
                    {{#if changingStatus}}
                        <label style="color:red;">Updating user's profile successfully!!!</label>
                    {{/if}}
                    <div><br></div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Username</label>
                            <p>{{user.username}}</p>
                        </div>
                        <div class="col-md-6"><label class="labels">Status</label>
                            <p>
                                {{#if user.isLock}}
                                    locked
                                {{else}}
                                    normal
                                {{/if}}
                            </p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Fully name</label>
                            <p>{{user.fullname}}</p>
                        </div>
                        <div class="col-md-12"><label class="labels">Phone number</label>
                            <p>{{user.phone}}</p>
                        </div>
                        <div class="col-md-12"><label class="labels">Address</label>
                            <p>{{user.address}}</p>
                        </div>
                        <div class="col-md-12"><label class="labels">Email</label>
                            <p>{{user.email}}</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="mt-5 text-center">
            <a href="/account/edit/{{user._id}}"><button class="btn btn-primary profile-button" type="button">Edit profile</button></a>
            <a href="#"><button class="btn btn-primary profile-button" type="button">Change password</button></a>
        </div>
    </div>
</div>