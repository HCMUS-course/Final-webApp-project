<div class="main-panel">
    <div class="container rounded bg-white mt-5 mb-5">
        <form action="/account/profile/edit/{{user._id}}" method="post">
            <div class="row">
                <div class="col-md-5">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <span class="font-weight-bold">Choose picture for your avatar</span>
                        <input type="file" name="file">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Edit profile</h4>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Username</label>
                                {{#unless isValidUsername}}
                                    <label style="color:red;">Username already used</label>
                                {{/unless}}
                                <input type="text" name="username" class="form-control"
                                       placeholder="enter your username" value="{{user.username}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Full Name</label>
                                <input type="text" name="fullname" class="form-control"
                                       placeholder="enter your full name" value="{{user.fullname}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Phone number</label>
                                <input type="text" name="phone" class="form-control"
                                       placeholder="enter your phone number" value="{{user.phone}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Address</label>
                                <input type="text" name="address" class="form-control"
                                       placeholder="enter your address" value="{{user.address}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Email</label>
                                {{#unless isValidEmail}}
                                    <label style="color:red;">Email already used</label>
                                {{/unless}}
                                <input type="text" name="email" class="form-control"
                                       placeholder="enter your email" value="{{user.email}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-primary profile-button">Update</button>
            </div>
            <div class="row mt-3">
            </div>
            <div class="row mt-3">
            </div>
        </form>
    </div>
</div>